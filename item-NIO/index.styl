        animation ani_nav 0.8s ease-in 1
        .box-logo
            width 112px
            height 40px
            display inline-block
            position absolute
            z-index 1
            .logo
                display inline-block
                width 100%
                height 100%
                img 
                    background-size contain
                    background-repeat no-repeat
                    width 100%
                    height 100%
                
        .box-option
            display inline-block
            position absolute
            padding-left 162px
            top 15px
            letter-spacing 2px
